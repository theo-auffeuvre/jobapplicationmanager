<div class="flex grow w-full" data-controller="kanban" >
  <% @statuses.each do |status| %>
    <div class="basis-1/5 border h-full">
      <div class="flex flex-col  min-h-screen pt-16 px-3">
        <h2 class="text-center">
          <%= status.name %>
        </h2>
        <p class="text-center mb-5">
          <%= "#{status.jobs.count} #{'job'.pluralize(status.jobs.count).upcase}" %>
        </p>
        <%= link_to "New Job", new_job_path(status_id: status.id), class: "border text-center mb-3", data: { turbo_frame: "modal" } %>
        <ul class="kanban-col grow" data-id="<%= status.id %>" id="ul-<%= status.id %>">
          <% status.jobs.order(:status_position).each do |job| %>
            <%= render partial: "jobs/job", locals: { job: job } %>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>
