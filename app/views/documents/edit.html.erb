<%= turbo_frame_tag "modal" do %>
  <div class="fixed top-0 left-0 w-screen h-screen bg-sky-600 bg-opacity-80 p-5 flex" data-controller="turbo-modal" data-action="turbo:submit-end->turbo-modal#submitEnd">
    <div class="flex flex-col align-middle w-full h-full bg-white opacity-100 rounded-lg z-50">
      <h2 class="text-center py-3 border-b border-neutral-800 modal-header">Edit Document</h2>
      <div class="flex grow">
        <div class="flex flex-col grow" data-controller="file-preview">
          <%= render "documents/edit_form" %>
        </div>
        <%= render "documents/add_job_to_document" %>
      </div>
    </div>
  <div>
<% end %>
