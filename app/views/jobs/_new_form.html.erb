<h2 class="text-center py-3 border-b border-neutral-800 modal-header">Add Job</h2>
<%= form_with model: @job, local: true, class: "flex flex-col px-5", data: { modal_target: "form" } do |form| %>
  <div class= "flex flex-col mt-3 relative inline-block" data-controller="search-company">
    <%= form.label :company, "Company" %>
    <%= form.text_field :company_id, data: { search_company_target: "searchbar", action: "keyup->search-company#change" } %>
    <ul class="search-results absolute left-0 right-0 z-99 top-full bg-gray-200" data-search-company-target="results"></ul>
    <%= form.hidden_field :logo_url, data: { search_company_target: "logourl" } %>
  </div>
  <div class= "flex flex-col mt-3 ">
    <%= form.label :title, "Job Title" %>
    <%= form.text_field :title, class: "rounded-md" %>
  </div>
  <div class= "flex flex-col mt-3">
    <%= form.label :url, "Job URL" %>
    <%= form.text_field :url, class: "rounded-md" %>
  </div>
  <div class= "flex flex-col mt-3">
    <%= form.label :status, "List" %>
    <%= form.collection_select :status_id, Status.all, :id, :name, class: "rounded-md" %>
  </div>
  <div class="flex justify-between">
    <div class= "w-1/3 bg-sky-600 rounded-md mt-3 py-1 text-white text-center mb-5" data-action="click->turbo-modal#hideModal">Discard</div>
    <div class= "w-1/3 bg-sky-600 rounded-md mt-3 py-1 text-white text-center mb-5">
      <%= form.submit %>
    </div>
  </div>
<% end %>
