<%= turbo_frame_tag "modal" do %>
  <div class="fixed top-0 left-0 w-screen h-screen bg-sky-600 bg-opacity-80 flex" data-controller="turbo-modal" data-action="turbo:submit-end->turbo-modal#submitEnd">
    <div class="m-auto  align-middle w-fit h-fit bg-white opacity-100 rounded-lg z-50">
      <div class="flex  max-h-[40rem]">
        <div class="flex flex-col w-full">
          <button class="ml-auto pt-2 pr-2" data-action="turbo-modal#hideModal">
            <svg class="w-6 h-6 text-neutral-800" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
          <h2 class="text-center pb-3 border-b border-neutral-800 modal-header">Edit Job</h2>
          <div class="max-w-2xl mx-auto">
            <div class="border-b border-gray-200 dark:border-gray-700 mb-4">
                <ul class="flex -mb-px" id="myTab" data-tabs-toggle="#myTabContent" role="tablist">
                    <li class="mr-2 basis-1/3" role="presentation">
                        <button class="inline-block w-full text-gray-500 hover:text-gray-600 hover:border-gray-300 rounded-t-lg py-4 px-4 text-sm font-medium text-center border-transparent border-b-2 dark:text-gray-400 dark:hover:text-gray-300" id="profile-tab" data-tabs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false"><i class="fa-solid fa-circle-info"></i> Job infos</a></button>
                    </li>
                    <li class="mr-2 basis-1/3" role="presentation">
                        <button class="inline-block w-full text-gray-500 hover:text-gray-600 hover:border-gray-300 rounded-t-lg py-4 px-4 text-sm font-medium text-center border-transparent border-b-2 dark:text-gray-400 dark:hover:text-gray-300 active" id="dashboard-tab" data-tabs-target="#dashboard" type="button" role="tab" aria-controls="dashboard" aria-selected="true"><i class="fa-solid fa-address-book"></i> Contacts</a></button>
                    </li>
                    <li class="mr-2 basis-1/3" role="presentation">
                        <button class="inline-block w-full text-gray-500 hover:text-gray-600 hover:border-gray-300 rounded-t-lg py-4 px-4 text-sm font-medium text-center border-transparent border-b-2 dark:text-gray-400 dark:hover:text-gray-300" id="settings-tab" data-tabs-target="#settings" type="button" role="tab" aria-controls="settings" aria-selected="false"><i class="fa-solid fa-file"></i> Documents</a></button>
                    </li>
                </ul>
            </div>
            <div id="myTabContent">
                <div class="bg-gray-50 p-4 rounded-lg dark:bg-gray-800 hidden" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <%= render "jobs/edit_form" %>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg dark:bg-gray-800" id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">
                  <div class="grid grid-cols-4 gap-5 mx-40" id="contacts">
                    <% Contact.where(job: @job).each do |contact| %>
                      <%= render "contacts/contact", contact: contact %>
                    <% end %>
                  </div>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg dark:bg-gray-800 hidden" id="settings" role="tabpanel" aria-labelledby="settings-tab">
                  <p>Yo</p>
                </div>
            </div>
          </div>
        </div>
        <div class="flex flex-col border-l border-neutral-80 p-2 w-full">
          <%= link_to "+ Add Appointement/Task", new_job_task_path(@job), class: "border text-center px-5 mb-3 whitespace-nowrap", data: { turbo_frame: "task_modal" } %>
          <ul id="tasks-list" class="overflow-y-auto scrollbar-hide">
            <% @job.tasks.each do |task| %>
              <%= render "tasks/task", task: task %>
            <% end %>
          <ul>
        </div>
      </div>
    </div>
  <div>
<% end %>

<script src="https://unpkg.com/@themesberg/flowbite@1.2.0/dist/flowbite.bundle.js"></script>
