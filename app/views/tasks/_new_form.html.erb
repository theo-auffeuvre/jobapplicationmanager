<h2 class="text-center py-3 border-b border-neutral-800 modal-header">Add Appointement/Task</h2>
<%= form_for [Job.find(params[:job_id]), @task] , local: true, class: "flex flex-col px-5", data: { modal_target: "form", controller: "task" } do |form| %>
  <div class="flex">
    <input type="checkbox" data-action="click->task#toggleTask">
    <%= tag.label "It's a task" %>
  </div>
  <div class= "flex flex-col mt-3 ">
    <%= form.label :title, "Task Title" %>
    <%= form.text_field :title, class: "rounded-md" %>
  </div>
  <div class="flex">
    <div class= "flex flex-col mt-3">
      <%= form.label "Start Date" %>
      <%= form.datetime_field :starts_at, class: "rounded-md", min:Date.today, :ignore_time => true, data: {task_target: "deactivable"} %>
    </div>
  </div>
  <%= tag.input(type: 'checkbox', data: {task_target: "deactivable"}) %><%= tag.label "Journées entière" %>
  <div class="flex">
    <div class= "flex flex-col mt-3">
      <%= form.label "End Date", data: {task_target: "dueto"} %>
      <%= form.datetime_field :ends_at, class: "rounded-md", min:Date.today, :ignore_time => true %>
    </div>
  </div>
  <div class= "flex flex-col mt-3">
    <%= form.label :note, "Note" %>
    <%= form.text_field :note, class: "rounded-md" %>
  </div>
  <div class= "flex flex-col mt-3">
    <%= form.label :task_status, "Completed" %>
    <%= form.check_box :task_status, class: "rounded-md" %>
  </div>
  <div class="flex justify-between">
    <div class= "rounded-md mt-3 py-1 border text-gray-600 text-center mb-5 px-2 cursor-pointer" data-action="click->turbo-modal#hideModal">Discard</div>
    <div class= "w-1/3 bg-sky-600 rounded-md mt-3 py-1 text-white text-center mb-5 cursor-pointer">
      <%= form.submit class: "cursor-pointer" %>
    </div>
  </div>
<% end %>
