<%= tag.li class: "flex flex-col border my-2 rounded shadow-md border px-3 py-2 text-gray-400 h-full w-fit min-w-full min-h-56" do %>
  <div class="flex items-center py-4 pr-4 pr-1 mr-3 border-b h-2/5">
    <img src="<%= contact.company.logo_url.starts_with?('http') ? contact.company.logo_url : image_path('default_company_logo.png') %>" class="rounded-full w-11 h-11 mr-2 shadow-md"/>
    <div class="flex flex-col pl-3">
      <div class="flex">
        <%= contact.first_name %>
        <%= contact.last_name %>
      </div>
      <p><%= contact.job_title %></p>
      <p><%= contact.company.name %></p>
    </div>
  </div>
  <div class="flex flex-col p-4 h-3/5">
    <%= content_tag :div, class: "flex items-center" do %>
      <i class="fas fa-map-marker-alt"></i>
      <p class="ml-2"><%= contact.location %></p>
    <% end if contact.location? %>
    <%= content_tag :div, class: "flex items-center" do %>
      <i class="fas fa-envelope"></i>
      <p class="ml-2"><%= contact.email %></p>
    <% end if contact.email? %>
    <%= content_tag :div, class: "flex items-center" do %>
      <i class="fas fa-phone"></i>
      <p class="ml-2"><%= contact.phone %></p>
    <% end if contact.phone? %>
  </div>
<% end %>

