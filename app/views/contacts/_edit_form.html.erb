<h2 class="text-center py-3 border-b border-neutral-800 modal-header">Edit Contact</h2>
<%= form_with model: @contact, local: true, class: "flex flex-col px-5", data: { modal_target: "form" } do |form| %>
  <div class= "flex flex-col mt-3 ">
    <%= form.label :first_name, "First Name" %>
    <%= form.text_field :first_name, class: "rounded-md" %>
  </div>
  <div class= "flex flex-col mt-3 ">
    <%= form.label :last_name, "Last Name" %>
    <%= form.text_field :last_name, class: "rounded-md" %>
  </div>
  <div class= "flex flex-col mt-3 ">
    <%= form.label :job_title, "Job Title" %>
    <%= form.text_field :job_title, class: "rounded-md" %>
  </div>
  <div class= "flex flex-col mt-3 relative inline-block" data-controller="search-company">
    <%= form.label :company, "Company" %>
    <%= form.text_field :company_id, data: { search_company_target: "searchbar", action: "keyup->search-company#change" }, value: Company.find(@contact.company_id).name %>
    <ul class="search-results absolute left-0 right-0 z-99 top-full bg-gray-200" data-search-company-target="results"></ul>
    <%= form.hidden_field :logo_url, data: { search_company_target: "logourl" } %>
  </div>
  <div class= "flex flex-col mt-3">
    <%= form.label :location, "Location" %>
    <%= form.text_field :location, class: "rounded-md" %>
  </div>
  <div class= "flex flex-col mt-3">
    <%= form.label :email, "Email" %>
    <%= form.text_field :email, class: "rounded-md" %>
  </div>
  <div class= "flex flex-col mt-3">
    <%= form.label :phone, "Phone" %>
    <%= form.text_field :phone, class: "rounded-md" %>
  </div>
  <div class="flex justify-between">
    <%= link_to "Delete", contact_path(@contact), data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" }, class: "w-44 bg-red-600 rounded-md mt-3 py-1 text-white text-center mb-5" %>
    <div class="flex ml-auto">
      <div class= "rounded-md mt-3 py-1 border text-gray-600 text-center mb-5 px-2 cursor-pointer" data-action="click->turbo-modal#hideModal">Discard</div>

        <%= form.button "Update", type: "submit", class: "w-44 bg-sky-600 rounded-md mt-3 py-1 text-white text-center mb-5 ml-5" %>

    </div>
  </div>
<% end %>
