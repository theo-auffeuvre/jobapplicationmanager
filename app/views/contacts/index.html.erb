<div class="flex justify-end my-2">
  <%= link_to new_contact_path, data: { turbo_frame: "modal" } do %>
    <div class="border text-center  text-gray-400 mb-3 px-3 rounded shadow-md" >
      <i class="fas fa-plus"></i> New Contact
    </div>
  <% end %>
</div>

<div class="grid grid-cols-4 gap-5 mx-40" id="contacts">
  <% @contacts.each do |contact| %>
      <%= render partial: "contact", locals: { contact: contact } %>
  <% end %>
</div>
